{
  "version": 2,
  "regions": ["iad1"],
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "redirects": [
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "www.studio-nexora.com"
        }
      ],
      "destination": "https://studio-nexora.com/$1",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains; preload"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=(), interest-cohort=()"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline' *.vercel.app *.clerk.dev *.clerk.accounts.dev *.stripe.com *.lemonsqueezy.com; style-src 'self' 'unsafe-inline' *.clerk.dev *.clerk.accounts.dev; img-src 'self' data: blob: *.replicate.delivery *.r2.cloudflarestorage.com *.clerk.dev *.clerk.accounts.dev *.supabase.co; connect-src 'self' *.stripe.com *.lemonsqueezy.com *.replicate.com *.clerk.dev *.clerk.accounts.dev *.supabase.co; frame-src 'self' *.stripe.com *.lemonsqueezy.com *.clerk.dev *.clerk.accounts.dev;"
        }
      ]
    },
    {
      "source": "/_next/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "functions": {
    "src/app/api/upload/route.ts": {
      "maxDuration": 30
    },
    "src/app/api/checkout/route.ts": {
      "maxDuration": 15
    },
    "src/app/api/webhooks/stripe/route.ts": {
      "maxDuration": 10
    },
    "src/app/api/webhooks/clerk/route.ts": {
      "maxDuration": 10
    },
    "src/app/api/webhooks/lemonsqueezy/route.ts": {
      "maxDuration": 10
    }
  },
  "crons": [
    {
      "path": "/api/cron/cleanup",
      "schedule": "0 2 * * *"
    }
  ]
}